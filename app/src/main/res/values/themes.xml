<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- XXX This file comes from Android Studio and seems to have
         no effect whatsoever on the actual colors of the app.
    -->


    <!-- Base application theme. -->
    <style name="Theme.FeedViewer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FeedViewer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FeedViewer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/white</item>
        <!-- <item name="android:colorBackground">@color/white</item> -->
    </style>

    <!-- colorOnPrimary will be used for button text in AlertDialog,
         whether we like it or not. It's not clear how to override that.
         So set a dark background so the light text will show up.
      -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- background -->
        <item name="android:background">#005555</item>

        <!-- title and text -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Not used for anything I can see
        <item name="android:textColor">#FFFF00</item>
        <item name="colorAccent">#FFFF00</item>
          -->
    </style>

</resources>
